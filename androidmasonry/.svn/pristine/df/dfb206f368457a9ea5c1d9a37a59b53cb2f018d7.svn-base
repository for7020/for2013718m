<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:masonry="http://schemas.android.com/apk/res/org.masonry"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
	<Button 
		android:id="@+id/toggle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Before: CSS Floats"
	/>
	<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
		<org.masonry.Floats
				android:id="@+id/masonry"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp"
			    masonry:gutter="5dp">
			<include layout="@layout/small_item" />
			<include layout="@layout/small_item" />
			<include layout="@layout/long_item" />
			<include layout="@layout/small_item" />
			<include layout="@layout/wide_item" />
			<include layout="@layout/long_item" />
			<include layout="@layout/small_item" />
			<include layout="@layout/large_item" />
			<include layout="@layout/wide_item" />
			<include layout="@layout/small_item" />
			<include layout="@layout/large_item" />
			<include layout="@layout/wide_item" />
			<include layout="@layout/small_item" />
			<include layout="@layout/long_item" />
			<include layout="@layout/wide_item" />
			<include layout="@layout/small_item" />
			<include layout="@layout/small_item" />
			<include layout="@layout/small_item" />
		</org.masonry.Floats>
	</ScrollView>
</LinearLayout>
